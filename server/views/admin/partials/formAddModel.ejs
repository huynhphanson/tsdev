<h1><i class="fa-solid fa-screwdriver-wrench"></i> Thêm mô hình</h1>
<form id="modelForm" enctype="multipart/form-data">
  <label>Khách hàng:</label>
  <select name="client" id="clientSelect">
    <option value="__new">+ Thêm khách hàng mới</option>
  </select>
  <input
    type="text"
    id="customClient"
    placeholder="Tên khách hàng mới..."
    style="display: none; margin-top: 8px;"
  />

  <label>Tên mô hình:</label>
  <input type="text" name="name" autocomplete="off"/>

  <label>Slug mô hình:</label>
  <div class="dropdown-wrapper">
    <input type="text" name="slug" id="slugInput" placeholder="ví dụ: cau-song-cho" autocomplete="off" />
    <ul id="slugDropdown" class="dropdown-list"></ul>
  </div>


  <label>Mô tả:</label>
  <textarea name="description" rows="3"></textarea>

  <label>Vị trí:</label>
  <input type="text" name="location" autocomplete="off"/>

  <label>Thumbnail:</label>
  <input type="file" name="thumbnail" accept="image/*" />

  <button type="submit">
    <i class="fa-solid fa-floppy-disk"></i> Lưu
  </button>
</form>
